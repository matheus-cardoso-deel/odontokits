<%= form_for(@aluno, url: yield(:path)) do |f| %> <!--#@aluno instance variable from controller-->

  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :nome %>
  <%= f.text_field :nome, value: nil, class: 'form-control' %>
  
  <%= f.label :email %>
  <%= f.text_field :email, value: nil, class: 'form-control' %>
  
  <%= f.label :matricula %>
  <%= f.text_field :matricula, value: nil, class: 'form-control' %>
  
  <%= f.label :periodo %>
  <%= f.text_field :periodo, value: nil, class: 'form-control' %>

  <%= f.label :senha %>
  <%= f.password_field :password, value: nil, class: 'form-control' %>

  <%= f.label :confirmação_de_senha %>
  <%= f.password_field :password_confirmation, value: nil, class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>