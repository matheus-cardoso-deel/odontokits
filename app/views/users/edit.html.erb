<% provide(:title, "Atualizar usuário") %>
<% provide(:button_text, 'Salvar alterações') %>
<% provide(:path, user_path(@user)) # Information to the form (PATCH), In this case, @user is the user whoses id is in the browser and current_user is the logged in user  %>

<h1>Atualizar usuário</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="gravatar_edit">
      <%= render 'form' %>
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank" rel="noopener noreferrer">change</a>
    </div>
  </div>
</div>