<% provide(:title, 'Registrar') %>
<% provide(:button_text, 'Criar conta') %>
<% provide(:path, signup_path) %>

<% if logged_in? %>
<h1>Sign up</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'form' %>
  </div>
</div>
<% else %>
<h1>Você precisa estar logado para criar uma conta para alguém!</h1>
<% end %>