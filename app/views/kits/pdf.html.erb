<div id="label-font">
  <% if Rails.env.development? %>
      <%= image_tag(Rails.root.join('public', 'system', 'dragonfly', 'development', "#{kit.image_uid}"), size: "67x67", alt: "QRCODE", class: "gravatar") %>
  <% else %>
      <%= image_tag('https://s3-sa-east-1.amazonaws.com/odontokits/' + "#{kit.image_uid}", size: "67x67", alt: "QRCODE", class: "gravatar") %>
  <% end %>
    <b> NOME: <%= kit.aluno.nome %> </b>
    <b style="display: block"> PERÍODO: <%= kit.aluno.periodo %> </b>
    <b> KIT: <%= kit.tipo %> </b>
    <div>
      <b style="color:red;font-size: 85%"> VALIDADE: 15 DIAS </b>
    </div>
</div>

<% if all_kits == "true" %>
  <% kits.each do |kit| %>
    <div id="label-font">
      <% if Rails.env.development? %>
          <%= image_tag(Rails.root.join('public', 'system', 'dragonfly', 'development', "#{kit.image_uid}"), size: "67x67", alt: "QRCODE", class: "gravatar") %>
      <% else %>
          <%= image_tag('https://s3-sa-east-1.amazonaws.com/odontokits/' + "#{kit.image_uid}", size: "67x67", alt: "QRCODE", class: "gravatar") %>
      <% end %>
        <b> NOME: <%= kit.aluno.nome %> </b>
        <b style="display: block"> PERÍODO: <%= kit.aluno.periodo %> </b>
        <b> KIT: <%= kit.tipo %> </b>
        <div>
          <b style="display:block;color:red;font-size: 85%"> VALIDADE: 15 DIAS </b>
        </div>
    </div>
  <% end %>
<% end %>
