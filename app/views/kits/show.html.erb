<% provide(:title, @aluno.nome + "'s " + @kit.nome) %>
<div class="row">
  <aside class="col-md-4">

    <section class="user_info">
      <h1>
          <%= link_to image_tag("toolbox-icon.png", size:"50", alt: "Kit Image"), '#' %>
          <%= @kit.nome %>
      </h1>
      
    <%= link_to image_tag(@kit.image.url, alt: "QRCODE", class: 'img-thumbnail', id: "margem"),
    @kit.image.url, target: '_blank' %>
    </section>
  </aside>
    <div class="col-md-8">
    <h3>Histórico de Transações para <%= @kit.nome %> (<%= @kit.feeds.count %>)</h3>
    <% if @kit.feeds.any? %>
      <ol class="feeds">
        <%= render @feeds %>
      </ol>
      <%= will_paginate @feeds %>
    <% end %>
  </div>
</div>